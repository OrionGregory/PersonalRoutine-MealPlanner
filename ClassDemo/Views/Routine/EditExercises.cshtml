@model Assignment3.Models.Routine

@{
    ViewData["Title"] = "Edit Exercises";
}

<h1>Edit Exercises for @Model.RoutineType - @Model.DayOfWeek</h1>

<h2>Current Exercises</h2>
<table class="table">
    <thead>
        <tr>
            <th>Description</th>
            <th>Reps</th>
            <th>Sets</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var exercise in Model.Exercises)
        {
            <tr>
                <td>@exercise.Description</td>
                <td>@exercise.Reps</td>
                <td>@exercise.Sets</td>
                <td>
                    <form asp-action="DeleteExercise" asp-route-id="@exercise.Id" method="post" class="d-inline">
                        <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this exercise?');">
                            Delete
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<h2>Add New Exercise</h2>
<form asp-action="AddExercise" method="post">
    <input type="hidden" asp-for="Id" value="@Model.Id" />
    <input type="hidden" name="routineId" value="@Model.Id" />

    <div class="form-group">
        <label asp-for="Exercises[0].Description" class="control-label">Description</label>
        <input asp-for="Exercises[0].Description" class="form-control" name="exercise.Description" />
    </div>

    <div class="form-group">
        <label asp-for="Exercises[0].Reps" class="control-label">Reps</label>
        <input asp-for="Exercises[0].Reps" class="form-control" name="exercise.Reps" type="number" />
    </div>

    <div class="form-group">
        <label asp-for="Exercises[0].Sets" class="control-label">Sets</label>
        <input asp-for="Exercises[0].Sets" class="form-control" name="exercise.Sets" type="number" />
    </div>

    <button type="submit" class="btn btn-success">Add Exercise</button>
</form>

<a asp-action="Index" class="btn btn-secondary mt-3">Back to List</a>
