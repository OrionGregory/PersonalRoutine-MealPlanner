@model ClassDemo.Models.Movie

<h1>@Model.Title</h1>

<div class="card mb-3">
    <div class="card-body">
        <h2 class="card-title">@Model.Title</h2>
        <p class="card-text"><strong>IMDB Link:</strong> <a href="@Model.IMDBLink" target="_blank">@Model.IMDBLink</a></p>
        <p class="card-text"><strong>Genre:</strong> @Model.Genre</p>
        <p class="card-text"><strong>Year:</strong> @Model.Year</p>
        @if (!string.IsNullOrEmpty(Model.Poster))
        {
            <p class="card-text">
                <strong>Poster:</strong> <br />
                <img src="@Model.Poster" alt="Poster" width="200" />
            </p>
        }
    </div>
</div>

<form asp-action="Delete" method="post" onsubmit="return confirm('Are you sure you want to delete this movie?');">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</form>
