@model ClassDemo.Models.Actor

@{
    ViewData["Title"] = "Edit Actor";
}

<h1>Edit Actor</h1>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit" asp-route-id="@Model.Id" enctype="multipart/form-data">
            <input type="hidden" asp-for="Id" />

            <!-- Validation Summary -->
            <div asp-validation-summary="All" class="text-danger"></div>

            <!-- Name -->
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <!-- Gender -->
            <div class="form-group">
                <label asp-for="Gender" class="control-label"></label>
                <input asp-for="Gender" class="form-control" />
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>

            <!-- Age -->
            <div class="form-group">
                <label asp-for="Age" class="control-label"></label>
                <input asp-for="Age" class="form-control" />
                <span asp-validation-for="Age" class="text-danger"></span>
            </div>

            <!-- IMDB Link -->
            <div class="form-group">
                <label asp-for="IMDBLink" class="control-label"></label>
                <input asp-for="IMDBLink" class="form-control" />
                <span asp-validation-for="IMDBLink" class="text-danger"></span>
            </div>

            <!-- Current Photo -->
            <div class="form-group">
                <label for="currentPhoto">Current Photo</label><br />
                @if (Model.Photo != null)
                {
                    <img src="@Url.Action("GetActorPhoto", "Actor", new { id = Model.Id })" alt="Actor Photo" style="max-width:150px;" />
                }
                else
                {
                    <p>No photo available.</p>
                }
            </div>

            <!-- Upload New Photo -->
            <div class="form-group">
                <label for="photo">Upload New Photo</label>
                <input type="file" name="photo" class="form-control" />
            </div>

            <!-- Submit Button -->
            <div class="form-group">
                <input type="submit" value="Save Changes" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

<a asp-action="Index">Back to List</a>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
