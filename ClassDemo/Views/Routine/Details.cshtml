@model Assignment3.Models.Routine

@{
    ViewData["Title"] = "Routine Details";
}

<h1>Routine Details</h1>

<div>
    <h3>@Model.RoutineType for @Model.DayOfWeek</h3>
    <p><strong>Person:</strong> @Model.Person.Name</p>

    <h4>Exercises</h4>
    <ul>
        @if (Model.Exercises != null && Model.Exercises.Any())
        {
            @foreach (var exercise in Model.Exercises)
            {
                <li>@exercise.Description - @exercise.Sets sets of @exercise.Reps reps</li>
            }
        }
        else
        {
            <p>No exercises assigned to this routine.</p>
        }
    </ul>
</div>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>

    <form asp-action="Delete" asp-route-id="@Model.Id" method="post" class="d-inline">
        <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this routine?');">
            Delete
        </button>
    </form>
</div>
