@model IEnumerable<ClassDemo.Models.Movie>

<h1>Movies</h1>

<a asp-action="Create" class="btn btn-primary mb-3">Add Movie</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Title</th>
            <th>Genre</th>
            <th>Year</th>
            <th>IMDB Link</th>
            <th>Poster</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var movie in Model)
        {
            <tr>
                <td>@movie.Title</td>
                <td>@movie.Genre</td>
                <td>@movie.Year</td>
                <td>
                    @if (!string.IsNullOrEmpty(movie.IMDBLink))
                    {
                        <a href="@movie.IMDBLink" target="_blank">IMDB Profile</a>
                    }
                    else
                    {
                        <span>No IMDB link provided.</span>
                    }
                </td>
                <td>
                    @if (!string.IsNullOrEmpty(movie.Poster))
                    {
                        <img src="@movie.Poster" alt="@movie.Title Poster" class="img-thumbnail" style="max-width:100px;" onerror="this.onerror=null; this.src='@Url.Content("~/images/no-image.png")';" />
                    }
                    else
                    {
                        <span>No Poster Available</span>
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@movie.Id" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Details" asp-route-id="@movie.Id" class="btn btn-sm btn-info">Details</a>
                    <a asp-action="Delete" asp-route-id="@movie.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
