@model IEnumerable<Assignment3.Models.Nutrition>

@{
    ViewData["Title"] = "Nutrition Records";
}

<h1>Nutrition Records</h1>

<table class="table">
    <thead>
        <tr>
            <th>Person</th>
            <th>BMR</th>
            <th>Calorie Surplus/Deficit</th>
            <th>Protein Percentage</th>
            <th>Carb Percentage</th>
            <th>Fat Percentage</th>
            <th>Daily Calories</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Person.Name</td>
                <td>@item.BMR</td>
                <td>@item.CalorieSurplusOrDeficit</td>
                <td>@item.ProteinPercentage%</td>
                <td>@item.CarbPercentage%</td>
                <td>@item.FatPercentage%</td>
                <td>@item.TotalDailyCalories</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">Details</a>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="btn-group" role="group">
    <a asp-action="Create" class="btn btn-success">Add New Nutrition Record</a>
    <a asp-action="GenerateNutritionPlan" class="btn btn-primary">Generate Nutrition Plan</a>
</div>
