@model ClassDemo.Models.MovieActor

@{
    ViewData["Title"] = "Delete Movie-Actor Link";
}

<h1>Delete Movie-Actor Link</h1>

<h3>Are you sure you want to delete this link?</h3>
<div>
    <h4>Movie-Actor</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Movie
        </dt>
        <dd class="col-sm-10">
            @Model.Movie.Title
        </dd>
        <dt class="col-sm-2">
            Actor
        </dt>
        <dd class="col-sm-10">
            @Model.Actor.Name
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="MovieId" />
        <input type="hidden" asp-for="ActorId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>
