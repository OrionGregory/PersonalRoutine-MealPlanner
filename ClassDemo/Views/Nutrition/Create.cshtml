@using System.Security.Claims
@model Assignment3.Models.Nutrition

@{
    ViewData["Title"] = "Create Nutrition Plan";
}

<h1>Create Nutrition Plan</h1>

<a href="@Url.Action("Create", "Nutrition", new { personId = User.FindFirstValue(ClaimTypes.NameIdentifier) })" class="btn btn-success">Add New Nutrition Record</a>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create" method="post" class="nutrition-form">
            <div asp-validation-summary="All" class="text-danger"></div>
            
            <input type="hidden" asp-for="PersonId" />

            <div class="form-group">
                <label asp-for="BMR" class="control-label"></label>
                <input asp-for="BMR" class="form-control" type="number" />
                <span asp-validation-for="BMR" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CalorieSurplusOrDeficit" class="control-label"></label>
                <input asp-for="CalorieSurplusOrDeficit" class="form-control" type="number" />
                <span asp-validation-for="CalorieSurplusOrDeficit" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ProteinPercentage" class="control-label"></label>
                <input asp-for="ProteinPercentage" class="form-control" type="number" min="0" max="100" />
                <span asp-validation-for="ProteinPercentage" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CarbPercentage" class="control-label"></label>
                <input asp-for="CarbPercentage" class="form-control" type="number" min="0" max="100" />
                <span asp-validation-for="CarbPercentage" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="FatPercentage" class="control-label"></label>
                <input asp-for="FatPercentage" class="form-control" type="number" min="0" max="100" />
                <span asp-validation-for="FatPercentage" class="text-danger"></span>
            </div>

            <br />
            <div class="form-group">
                <input type="submit" value="Create Nutrition Plan" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
