@model Assignment3.Models.Routine

@{
    ViewData["Title"] = "Delete Routine";
}
<link rel="stylesheet" href="~/css/site.css" />
<h1>Delete Routine</h1>

<div class="alert alert-warning" role="alert">
    <h3>Are you sure you want to delete this routine?</h3>
    <p><strong>Day:</strong> @Model.DayOfWeek</p>
    <p><strong>Type:</strong> @Model.RoutineType</p>
    <p><strong>Person:</strong> @Model.Person?.Name ?? "Unknown"</p>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="mt-3">
        <button type="submit" class="btn btn-danger">
            <i class="bi bi-trash"></i> Delete
        </button>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Cancel
        </a>
    </div>
</form>
