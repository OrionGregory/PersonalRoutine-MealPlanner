<!DOCTYPE html>
<html lang="en">
@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - My ASP.NET Application</title>

    <!-- Add your stylesheets -->
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
    <link href="wwwroot/css/site.css" rel="stylesheet" />

    <!-- Your custom stylesheet to override -->
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body class="bg-dark">
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark" style="background-color:#1C252C;">
            <div class="container-fluid d-flex justify-content-between">
                <a asp-controller="Home" asp-action="Index" class="d-flex justify-content-left align-items-center">
                    <img style="max-width: 150px; height: auto;" src="/images/Logo/GymPalLogo.jpg" alt="GymPal" />
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse d-flex justify-content-end" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" style="color:white;" asp-controller="Person" asp-action="Index">My Profile</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" style="color:white;" asp-controller="Person" asp-action="Details">Routines</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" style="color:white;" asp-controller="Nutrition" asp-action="Index">Nutrition</a>
                        </li>
                        @if (SignInManager.IsSignedIn(User))
                        {
                            <li class="nav-item">
                                <a class="nav-link" style="color:white;" asp-area="Identity" asp-page="/Account/Manage/Index">Account</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" style="color:white;" asp-area="Identity" asp-page="/Account/Logout">Logout</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" style="color:white;" asp-area="Identity" asp-page="/Account/Login">Login</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" style="color:white;" asp-area="Identity" asp-page="/Account/Register">Register</a>
                            </li>
                        }
                    </ul>
                    <form id="weather-form" class="d-flex">
                        <input id="zip-code" class="form-control form-control-sm me-2" type="text" placeholder="Zip Code" aria-label="Zip Code">
                        <button class="btn btn-outline-success btn-sm" type="button" onclick="getWeather()">Get Weather</button>
                    </form>
                    <span id="weather-info" style="color:white; margin-left: 10px;">-- °F</span>
                </div>
            </div>
        </nav>
    </header>
    <div class="container body-content">
        @RenderBody()
    </div>
    <footer class="footer">
        <div class="container">
            <p class="text-muted">&copy; 2023 - My ASP.NET Application</p>
        </div>
    </footer>
    @RenderSection("Scripts", required: false)
    <script>
        async function getWeather() {
            const zipCode = document.getElementById('zip-code').value;
            const response = await fetch(`/Home/GetTemperature?zipCode=${zipCode}`);
            const data = await response.json();
            const weatherInfo = document.getElementById('weather-info');
            weatherInfo.textContent = `${data.city}: ${data.temperature} °F`;
        }
    </script>
</body>
</html>
