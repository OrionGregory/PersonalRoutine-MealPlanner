@model ClassDemo.Models.MovieActor

@{
    ViewData["Title"] = "Edit Movie-Actor Link";
}

<h1>Edit Movie-Actor Link</h1>

<div class="card">
    <div class="card-body">
        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="MovieId" />
            <input type="hidden" asp-for="ActorId" />

            <div class="mb-3">
                <label asp-for="MovieId" class="form-label">Movie</label>
                <select asp-for="MovieId" class="form-select" asp-items="@(ViewData["Movies"] as SelectList)">
                    <option value="">-- Select Movie --</option>
                </select>
                <span asp-validation-for="MovieId" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ActorId" class="form-label">Actor</label>
                <select asp-for="ActorId" class="form-select" asp-items="@(ViewData["Actors"] as SelectList)">
                    <option value="">-- Select Actor --</option>
                </select>
                <span asp-validation-for="ActorId" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-between">
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                <button type="submit" class="btn btn-primary">Save Changes</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
