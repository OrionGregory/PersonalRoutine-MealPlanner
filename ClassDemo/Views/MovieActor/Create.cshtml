@model ClassDemo.Models.MovieActor

@{
    ViewData["Title"] = "Create Movie-Actor Link";
}

<h1>Create Movie-Actor Link</h1>

<div class="card">
    <div class="card-body">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="All" class="text-danger mb-3"></div>

            <div class="mb-3">
                <label asp-for="MovieId" class="form-label">Movie</label>
                <select asp-for="MovieId" class="form-select" asp-items="@(ViewData["Movies"] as IEnumerable<SelectListItem>)">
                    <option value="">-- Select Movie --</option>
                </select>
                <span asp-validation-for="MovieId" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ActorId" class="form-label">Actor</label>
                <select asp-for="ActorId" class="form-select" asp-items="@(ViewData["Actors"] as IEnumerable<SelectListItem>)">

                    <option value="">-- Select Actor --</option>
                </select>
                <span asp-validation-for="ActorId" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-between">
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                <button type="submit" class="btn btn-primary">Create</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
