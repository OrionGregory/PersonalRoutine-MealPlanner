@model IEnumerable<Assignment3.Models.Person>

@{
    ViewData["Title"] = "Your Workout Plan";
}

<h1>Admin Menu</h1>

<h2>Weekly Workout Routine</h2>
<table id="ProfileList" class="table table-bordered table-striped" style="color:white;">
    <thead>
        <tr>
            <td colspan="2">
                <a asp-action="Create">Create New Profile</a>
            </td>
        </tr>
        <tr>
            <th>Users</th>
        </tr>
    </thead>
    <tbody>      
            @foreach (var person in Model)
            {
                <tr>

                    <td class="action-cell">
                        <p>@person.Name </p>
                        <p>AccountID: @person.UserId | ProfileID: @person.Id</p>
                        <div class="action-links align-content-center">
                            <a asp-action="AdminEdit" asp-route-id="@person.Id" class="btn btn-primary">Edit</a>
                            <a asp-action="Delete" asp-route-id="@person.Id" class="btn btn-primary">Delete</a>
                            <a asp-action="Details" asp-route-id="@person.Id" class="btn btn-primary">Details</a>
                        </div>
                    </td>
                </tr>
            }
        
    </tbody>
</table>

<style>
    /* Initially hide the action links */
    .action-links {
        display: none;
    }

    /* Show the action links when hovering over the name cell */
    tr:hover .action-cell .action-links {
        display: block;
    }

    /* Optionally, add some styles for the action cell */
    .action-cell {
        position: relative;
    }
</style>