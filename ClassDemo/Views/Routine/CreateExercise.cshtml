@model Assignment3.Models.Exercise

@{
    ViewData["Title"] = "Add New Exercise";
}

<h1>Add New Exercise</h1>

<form asp-action="CreateExercise" method="post">
    @Html.AntiForgeryToken()

    <div class="mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" placeholder="Enter exercise name" aria-describedby="NameError" />
        <span asp-validation-for="Name" id="NameError" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Description" class="form-label"></label>
        <input asp-for="Description" class="form-control" placeholder="Enter a brief description" aria-describedby="DescriptionError" />
        <span asp-validation-for="Description" id="DescriptionError" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Sets" class="form-label"></label>
        <input asp-for="Sets" class="form-control" placeholder="Enter number of sets" aria-describedby="SetsError" />
        <span asp-validation-for="Sets" id="SetsError" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Reps" class="form-label"></label>
        <input asp-for="Reps" class="form-control" placeholder="Enter number of repetitions" aria-describedby="RepsError" />
        <span asp-validation-for="Reps" id="RepsError" class="text-danger"></span>
    </div>

    <!-- Hidden RoutineId field to associate exercise with a routine -->
    <input type="hidden" asp-for="RoutineId" />

    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Add Exercise</button>
        <a asp-action="Details" asp-route-id="@Model.RoutineId" class="btn btn-secondary">Cancel</a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
