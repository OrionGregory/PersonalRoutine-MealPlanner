@model Assignment3.Models.Person

@{
    ViewData["Title"] = "Create Profile";
}

<h1>Create Your Profile</h1>
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create" method="post">
            <div class="form-group">
                <label asp-for="name"></label>
                <input asp-for="name" class="form-control" />
                <span asp-validation-for="name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="age"></label>
                <input asp-for="age" class="form-control" />
                <span asp-validation-for="age" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="sex"></label>
                <select asp-for="sex" class="form-control">
                    <option value="">Select Sex</option>
                    <option>Male</option>
                    <option>Female</option>
                    <option>Other</option>
                </select>
                <span asp-validation-for="sex" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="weight"></label>
                <input asp-for="weight" class="form-control" />
                <span asp-validation-for="weight" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="goalWeight"></label>
                <input asp-for="goalWeight" class="form-control" />
                <span asp-validation-for="goalWeight" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="time"></label>
                <input asp-for="time" class="form-control" />
                <span asp-validation-for="time" class="text-danger"></span>
            </div>
            <input type="submit" value="Create Profile" class="btn btn-primary" />
        </form>
    </div>
</div>
<a asp-action="Index">Back to List</a>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
