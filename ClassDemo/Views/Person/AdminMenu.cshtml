@model IEnumerable<Assignment3.Models.Person>

@{
    ViewData["Title"] = "Your Workout Plan";
}

<h1>Admin Menu</h1>

<h2>Weekly Workout Routine</h2>
<table id="UserList" class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Username</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var person in Model)
        {
            <tr>
                <td>
                   <p>@person.Name</p>
                </td>
                <td>
                    <a asp-action="AdminEdit" asp-route-id=@person.Id>Edit</a>
                    <a asp-action="Delete" asp-route-id=@person.Id>Delete</a>
                    <a asp-action="Details" asp-route-id=@person.Id>Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>